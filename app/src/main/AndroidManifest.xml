<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.list.basicgrocery"
    android:versionCode="2">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pen_white_round"
        android:label="SimpleList"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.list.basicgrocery.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.list.basicgrocery.ListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.list.basicgrocery.PrivacyPolicy"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>



    </application>



</manifest>